<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".FordwardChaining">

        <TextView
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_marginTop="70dp"
            android:text="Fordward Chaining"
            android:textColor="#019874"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/penyakit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked123"
            android:text="Luka pada organ-organ" />

        <CheckBox
            android:id="@+id/penyakit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked123"
            android:text="Bercak menyerupai kapas putih" />

        <CheckBox
            android:id="@+id/penyakit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked123"
            android:text="Insang merah kecoklatan" />

        <CheckBox
            android:id="@+id/penyakit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked123"
            android:text="Sulit bernafas" />

        <CheckBox
            android:id="@+id/penyakit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked123"
            android:text="Gerakan lambat" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertumbuhan lambat" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendarahan bagian tubuh" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sisik terkelupas" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perut membusung" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ikan terlihat lemah" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sering muncul ke permukaan" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gelisah" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banyak berlendir" />

        <CheckBox
            android:onClick="onCheckboxClicked123"
            android:id="@+id/penyakit14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mengosok-gosokan badannya" />

        <Button
            android:id="@+id/btn_diagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cek Diagnosa" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>